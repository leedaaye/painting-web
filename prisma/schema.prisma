generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ApiProvider {
  id          String   @id @default(cuid())
  name        String   @unique
  baseUrl     String
  apiKey      String
  modelId     String
  displayName String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive, displayName])
}

model UserKey {
  id         String      @id @default(cuid())
  key        String
  keyId      String      @unique
  name       String
  usageCount Int         @default(0)
  lastUsedAt DateTime?
  isActive   Boolean     @default(true)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  usages     UserUsage[]

  @@index([isActive, createdAt])
}

model UserUsage {
  id        String   @id @default(cuid())
  userId    String
  modelName String
  count     Int      @default(0)
  user      UserKey  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, modelName])
  @@index([userId])
}

model AdminConfig {
  id           Int      @id @default(autoincrement())
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
